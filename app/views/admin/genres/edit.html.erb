<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto my-3">

      <div class="row my-3">
        <div class="col-md-8">
          <h4>ジャンル edit</h4>
        </div>
      </div>

      <div class="row">
        <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
          <div class="col-md-6">
            <%= f.label :name, "genre name" %>
          </div>
          <div class="col-md-6">
            <%= f.text_field :name, class: "form-control" %>
            <%= f.submit "update" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>