<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto my-3">

      <div class="row my-3">
        <div class="col-md-8">
          <h4>ジャンル</h4>
        </div>
      </div>

      <div class="row my-3">
        <div class="col-md-8">
          <ul>
            <li>new</li>
            <div class="form">
              <%= form_with model: @genre, url: admin_genres_path do |f| %>
                <%= f.label :name, "ジャンル名" %>
                <%= f.text_field :name, class: "form-control col-5" %>
                <%= f.submit "登録" %>
              <% end %>
            </div>
            <li>index</li>
            <table class="table">
              <thead>
                <tr>
                  <td>ジャンル名</td>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "edit", edit_admin_genre_path(genre) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>