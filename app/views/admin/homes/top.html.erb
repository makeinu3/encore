<div class="container">
  <div class="row my-4">
    <div class="col-md-12">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-3 mb-3 p-5">
          <%= render 'admin/shared/sidebar', customers: @customers, posts: @posts, messages: @messages %>
        </div>

        <div class="col-md-8 p-5">
          <h4 class="mb-3">新規会員</h4>
          <div class="row mb-5">
            <table class="table">
              <% @new_customers.each do |customer| %>
                <tr>
                  <td><u><%= link_to customer.name, admin_customer_path(customer), class: "link" %></u> さま</td>
                  <td>favorite:&emsp;<%= customer.my_fave %></td>
                  <td>posts:&emsp;<%= customer.posts.count %></td>
                </tr>
              <% end %>
            </table>
          </div>

          <h4 class="mb-3">新着投稿</h4>
          <div class="row mb-3">
            <% @new_posts.each do |post| %>
              <div class="col-md-3 p-3">
                <i class="fa-regular fa-flag" aria-hidden="true"></i> <%= post.genre.name %><br>
                <%= link_to admin_post_path(post), class: "link" do %>
                  <%= image_tag post.image, class: "image" %><br>
                  <div class="p-1"><%= post.title %></div>
                <% end %>
              </div>
            <% end %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>