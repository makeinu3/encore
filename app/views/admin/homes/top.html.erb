<div class="container">
  <div class="row">
    <div class="col-md-12 my-3">
      <p class="notice"><%= notice %></p>

      <div class="row my-3">
        <div class="col-md-3 p-5">
          <%= render 'admin/shared/sidebar', customers: @customers, posts: @posts, messages: @messages %>
        </div>

        <div class="col-md-8 p-5">
          <div class="row">
            <div class="col-12">
              <h4>新着投稿</h4>
              <div class="row mt-3">
                <% @new_posts.each do |new_post| %>
                  <div class="col-3">
                    <%= link_to admin_post_path(new_post) do %>
                      <%= image_tag new_post.image, width: "100%" %>
                      <div class="text-dark text-center"><%= new_post.title %></div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

      </div>

    </div>
  </div>
</div>