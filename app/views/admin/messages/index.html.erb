<div class="container">
  <div class="row">
    <div class="col-md-12 my-3">
      <p class="notice"><%= notice %></p>

      <div class="row my-3">
        <div class="col-md-3 p-5">
          <%= render 'admin/shared/sidebar', customers: @customers, posts: @posts, messages: @messages %>
        </div>

        <div class="col-md-8 p-5">
          <h4>お客様ノート</h4>
          <div class="row mt-3">
            <div class="col-8">
              <% @messages.each do |message| %>
                <p>
                  <%= message.created_at.strftime('%Y/%m/%d') %>
                  <%= message.message %>
                  <%= message.customer.name %>
                  <%= link_to "削除", admin_message_path(message), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-outline-danger btn-sm" %>
                </p>
              <% end %>
            </div>
          </div>

          <div class="row mt-5">
            <div class="col-10"></div>
            <div class="col-2">
              <%= render 'layouts/back_btn', class: "btn btn-outline-dark btn-sm btn-block" %>
            </div>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>