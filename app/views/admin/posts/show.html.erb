<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p class="notice"><%= notice %><%= alert %></p>

      <div class="row">
        <div class="col-md-3 mx-auto p-5">
          <%= render 'admin/shared/sidebar', customers: @customers, posts: @posts, messages: @messages %>
        </div>

        <div class="col-md-8 mx-auto p-5">
          <div class="row">
            <div class="col-6">
              <% if @post.image.attached? %>
                <%= image_tag @post.image, width: "100%" %>
              <% end %>
            </div>
            <div class="col-6">
              <p><strong><%= @post.title %></strong></p>
              <p><%= @post.body %></p>
              <p><%= @post.place %></p>
              <p><%= @post.show_name %></p>
              <p><%= @post.show_date.strftime('%Y/%m/%d') %></p>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-8">
              <% @post.comments.each do |comment| %>
                <%= comment.customer.name %>
                <%= comment.comment %>
                <%= comment.created_at.strftime('%Y/%m/%d') %>
                <%= link_to "destroy", post_comment_path(comment.post, comment), method: :delete %>
              <% end %>
            </div>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>