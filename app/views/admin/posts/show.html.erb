<div class="container">
  <div class="row my-4">
    <div class="col-md-12">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-3 mb-3 p-5">
          <%= render 'admin/shared/sidebar', customers: @customers, posts: @posts, messages: @messages, return_requests: @return_requests %>
        </div>

        <div class="col-md-8 p-5">
          <div class="row mb-2">
            <div class="col-6">
              <h5>
                <u><%= link_to @post.customer.name, admin_customer_path(@post.customer), class: "link" %></u>
                <% if @post.customer.official == true %>
                  <i class="far fa-check-circle" aria-hidden="true"></i>
                <% end %>
              </h5>
              <%= image_tag @post.image, width: "100%" %>
              <i class="far fa-heart" aria-hidden="true"></i>
              <%= @post.likes.count %> likes
            </div>
            <div class="col-6">
              <h5><strong><%= @post.title %></strong></h5>
              <div class="p-3">
                <%= safe_join(@post.body.split("\n"),tag(:br)) %>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-12">
              <div align="right">
                <i class="far fa-flag" aria-hidden="true"></i> <%= @post.genre.name %><br>
                <%= @post.place %>
                「<%= @post.show_name %>」
                <%= @post.show_date.strftime('%Y.%m.%d') %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <div class="comments">
                <%= render 'admin/comments/index', post: @post %>
              </div>
            </div>
          </div>

          <div class="row mt-5">
            <div class="col-2">
              <%= render 'layouts/back_btn' %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>