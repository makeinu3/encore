<div class="container">
  <div class="row my-4">
    <div class="col-md-12">

      <div class="row">
        <div class="col-md-3 mb-3 p-5">
          <%= render 'admin/shared/sidebar', customers: @customers, posts: @posts, messages: @messages, return_requests: @return_requests %>
        </div>

        <div class="col-md-8 p-5">
          <h4 class="mb-3">復活申請一覧</h4>
          <table class="table">
            <thead>
              <tr>
                <th style="width: 20%">お名前</th>
                <th style="width: 65%">退会理由</th>
                <th style="width: 15%"></th>
              </tr>
            </thead>
              <% @return_requests.each do |r|%>
                <tr>
                  <td><%=r.customer.name %> さま</td>
                  <td><%= r.customer.cancel %></td>
                  <td><%= link_to "許可", admin_return_request_path(r), method: :patch, class: "btn btn-outline-success btn-sm" %></td>
                </tr>
              <% end %>
            </table>
        </div>
      </div>

    </div>
  </div>
</div>