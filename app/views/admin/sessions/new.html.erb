<div class="container">
  <div class="row my-4">
    <div class="col-md-12">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-10 p-5">
          <h4 class="mb-3">管理者ログイン</h4>

          <%= form_with model: @admin, url: admin_session_path do |f| %>
            <div class="row mb-3 ml-5">
              <div class="col-3">
                <%= f.label "メールアドレス" %>
              </div>
              <div class="col-5">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3 ml-5">
              <div class="col-3">
                <%= f.label "パスワード" %>
              </div>
              <div class="col-5">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>

            <div class="row ml-5">
              <div class="col-3"></div>
              <div class="col-3">
                <div class="actions">
                  <%= f.submit "ログイン", class: "btn btn-outline-info btn-block" %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="row ml-5">
            <div class="col-3"></div>
            <div class="col-3 text-center my-2">
              <h5>or</h5>
            </div>
          </div>

          <div class="row ml-5">
            <div class="col-3"></div>
            <div class="col-3">
              <%= link_to "ゲストログイン", admin_guestadmin_path, method: :post, class: "btn btn-outline-dark btn-block" %>
            </div>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

