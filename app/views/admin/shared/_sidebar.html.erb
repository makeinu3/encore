<div class="col-md-3">
  <h6><%= Date.current.strftime('%Y/%m/%d(%a)') %></h6>
  <h2><%= Time.current.strftime('%H:%M') %></h2>

  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to admin_customers_path do %>
        <u class="text-dark">customers</u>
        <span class="badge badge-light badge-pill">
          <%= customers.count %>
        </span>
      <% end %>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to admin_posts_path do %>
        <u class="text-dark">posts</u>
        <span class="badge badge-light badge-pill">
          <%= posts.count %>
        </span>
      <% end %>
    </li>
  </ul>
</div>