<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto my-5">

      <div class="row mb-5">
        <div class="col-md-5">
          <h5>エディット</h5>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8 mx-auto">
          <%= form_with model: @customer do |f| %>

            <div class="row mb-3">
              <div class="col-md-3 text-right">
                <%= f.label :name, "ネーム" %>
              </div>
              <div class="col-md-5">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-3 text-right">
                <%= f.label :my_fave, "スキ" %>
              </div>
              <div class="col-md-5">
                <%= f.text_field :my_fave, autocomplete: "my_fave", class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-3 text-right">
                <%= f.label :introduction, "ジコショウカイ" %>
              </div>
              <div class="col-md-5">
                <%= f.text_area :introduction, autocomplete: "introduction", class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-3 text-right">
                <%= f.label :email, "メールアドレス" %>
              </div>
              <div class="col-md-5">
                <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-3"></div>
              <div class="col-md-5">
                <%= f.submit "保存", class: "btn btn-outline-info" %>
              </div>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>