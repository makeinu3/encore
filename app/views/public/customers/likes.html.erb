<div class="container">
  <div class="row my-4">
    <div class="col-md-12">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-10 p-5">
          <h4>いいねした投稿一覧</h4>

          <div class="row mt-3">
            <div class="col-12">
              <% if @like_posts.count == 0 %>
                <p>いいねした投稿はありません。</p>
              <% else %>
                <div class="row post-list">
                  <%= render 'public/posts/index', posts: @like_posts %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="row mt-5">
            <div class="col-2">
              <%= render 'layouts/back_btn' %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>