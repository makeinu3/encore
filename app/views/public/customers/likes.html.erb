<div class="container">
  <div class="row">
    <div class="col-md-12 my-3">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-10 p-5">
          <h4>いいねした投稿一覧</h4>

          <div class="row mt-3">
            <% if @like_posts.count == 0 %>
              <p>いいねした投稿はありません。</p>
            <% else %>
              <% @like_posts.each do |post| %>
                <div class="col-md-3 p-3">
                  <i class="fa-regular fa-flag" aria-hidden="true"></i> <%= post.genre.name %><br>
                  <%= link_to post_path(post), class: "link" do %>
                    <%= image_tag post.image, class: "image" %><br>
                    <%= post.title %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="row mt-5">
            <div class="col-2">
              <%= render 'layouts/back_btn' %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>