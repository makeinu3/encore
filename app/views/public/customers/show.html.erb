<div class="container">
  <div class="row mt-3 my-4">
    <div class="col-md-12">
      <p class="notice"><%= notice %><%= alert %></p>

      <div class="row">
        <div class="col-md-8 mb-3 p-5">
          <form class="form-inline d-flex justify-content-between">
            <h5>
              <%= @customer.name %>
              <% if @customer.published == false %>
                <i class="fas fa-key"></i>
              <% end %>
            </h5>
            <div class="col-5">
              <% if @customer.published == false && @customer != current_customer %>
                <%= @customer.followers.count %>&emsp;Followers
                &emsp;&emsp;
                <%= @customer.followings.count %>&emsp;Following
              <% else %>
                <%= link_to @customer.followers.count, customer_followers_path(@customer), class: "text-dark" %>&emsp;Followers
                &emsp;&emsp;
                <%= link_to @customer.followings.count, customer_followings_path(@customer), class: "text-dark" %>&emsp;Following
              <% end %>
            </div>
            <div class="col-2">
              ️<%= link_to "likes", likes_customer_path(@customer), class: "link" %>
            </div>
            <div class="col-2">
              <% if @customer == current_customer %>
                <%= link_to "編集", edit_customer_path(current_customer), class: "btn btn-outline-success btn-sm btn-block" %>
                <%= link_to "退会", confirm_unsubscribe_path, class: "btn btn-outline-danger btn-sm btn-block" %>
              <% else %>
                <%= render 'public/relationships/btn', customer: @customer %>
              <% end %>
            </div>
          </form>

          <div class="row mt-3">
            <div class="col-4">
              <div class="box p-4">
                <p>favorite</p>
                <p><%= @customer.my_fave %></p>
              </div>
            </div>
            <div class="col-8">
              <div class="box p-4">
                <p>me</p>
                <p><%= safe_join(@customer.introduction.split("\n"),tag(:br)) %></p>
              </div>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-2">
              <%= render 'layouts/back_btn' %>
            </div>
          </div>

        </div>
      </div>

      <div class="row">
        <div class="col-md-8 p-5">
          <% if @customer.published == false && @customer != current_customer %>
            <p class="text-center">このアカウントは非公開アカウントです。</p>
          <% else %>
            <div class="post-list">
              <% @customer_posts.each do |post| %>
                <div class="row p-2 border-bottom">
                  <div class="col-12">
                    <p>
                      <%= post.show_date.strftime('%y.%m.%d') %>&emsp;<%= post.show_name %><br>
                      <strong><u><%= link_to post.title, post_path(post), class: "link" %></u></strong><br>
                      <%= post.body %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>