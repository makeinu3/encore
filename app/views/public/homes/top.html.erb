<div class="container">
  <div class="row">
    <div class="col-md-12 my-3">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-10 p-5">
          <h4>本日のおすすめ</h4>

          <div class="row">
            <div class="col-8 mx-auto">

              <div class="row mt-2 border-bottom">
                <h5 class="col-12">ライブ</h5>
                <% @genre1_posts.each do |post| %>
                  <div class="col-3 mx-auto">
                    <%= link_to post_path(post) do %>
                      <%= image_tag post.image, width: "100%", class: "mt-3 rounded-circle" %>
                      <div class="text-dark text-center"><%= post.title %></div>
                    <% end %>
                  </div>
                <% end %>
                <div class="col-12 text-right">
                  <u><%= link_to "all", posts_path, class: "text-dark" %></u>
                </div>
              </div>

              <div class="row mt-2 border-bottom">
                <h5 class="col-12">舞台</h5>
                <% @genre2_posts.each do |post| %>
                  <div class="col-3 mx-auto">
                    <%= link_to post_path(post) do %>
                      <%= image_tag post.image, width: "100%", class: "mt-3 rounded-circle" %>
                      <div class="text-dark text-center"><%= post.title %></div>
                    <% end %>
                  </div>
                <% end %>
                <div class="col-12 text-right">
                  <u><%= link_to "all", posts_path, class: "text-dark" %></u>
                </div>
              </div>

              <div class="row mt-2 border-bottom">
                <h5 class="col-12">ミュージカル</h5>
                <% @genre3_posts.each do |post| %>
                  <div class="col-3 mx-auto">
                    <%= link_to post_path(post) do %>
                      <%= image_tag post.image, width: "100%", class: "mt-3 rounded-circle" %>
                      <div class="text-dark text-center"><%= post.title %></div>
                    <% end %>
                  </div>
                <% end %>
                <div class="col-12 text-right">
                  <u><%= link_to "all", posts_path, class: "text-dark" %></u>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>