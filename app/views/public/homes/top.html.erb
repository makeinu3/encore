<div class="container">
  <div class="row">
    <div class="col-md-12 my-3">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-10 p-5">
          <h4>本日のおすすめ</h4>

          <div class="row">
            <div class="col-10 mx-auto">
              <div class="row mt-2">
                <% @posts.each do |post| %>
                  <div class="col-4 mx-auto mt-2 border-bottom">
                    <div class="genre-name">
                      <i class="fa-regular fa-flag"></i> <%= post.genre.name %>
                    </div>
                    <%= link_to post_path(post) do %>
                      <%= image_tag post.image, width: "100%" %>
                      <div class="text-dark text-center p-2"><%= post.title %></div>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="col-12 mt-3 text-right">
                <u><%= link_to "すべての投稿を見る", posts_path, class: "text-dark" %></u>
              </div>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>