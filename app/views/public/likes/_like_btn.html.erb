<% if post.liked_by?(current_customer) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true, class: "text-dark" do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: #ee836f;"></i>
    <%= post.likes.count %> likes
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true, class: "text-dark" do %>
    <i class="far fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %> likes
  <% end %>
<% end %>
