<div class="container">
  <div class="row">
    <div class="col-md-12 my-3">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-8 p-5">
          <h4 class="text-center">Thanks</h4>

        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-8 p-5">
          <h4>お客様ノート</h4>
          <div class="messages">
            <%= render 'public/messages/index', messages: @messages %>
          </div>

          <div class="row mt-3">
            <div class="col-12">
              <%= form_with model: [@message], local: false do |f| %>
               <div class="row">
                <div class="col-10">
                  <%= f.text_field :message, placeholder: "message", class: "form-control form-control-sm" %>
                </div>
                <div class="col-2">
                  <%= f.submit "send", class: "btn btn-outline-info btn-sm btn-block" %>
                </div>
                </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>