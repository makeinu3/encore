<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto my-5">
      <h4>お客様ノート</h4>

      <div class="row">
        <div class="col-md-8">
          <% @messages.each do |message| %>
            <p>
              <%= message.created_at.strftime('%Y/%m/%d') %>
              <%= message.message %>
              <%= message.customer.name %>
              <% if message.customer == current_customer %>
                <%= link_to "削除", message_path(message), method: :delete, class: "btn btn-danger btn-sm" %>
              <% end %>
            </p>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <%= form_with model: @message do |f| %>
            <%= f.text_field :message, placefolder: "message here", class: "form-control" %>
            <%= f.submit "send", class: "btn btn-info btn-sm" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>