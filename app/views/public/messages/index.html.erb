<div class="container">
  <div class="row my-4">
    <div class="col-md-12">
      <p class="notice"><%= notice %></p>

      <div class="row">
        <div class="col-md-8 p-5">
          <h4 class="mb-3 text-center">Thanks</h4>
          <div class="row">
            <% @place_posts.each do |post| %>
              <div class="col-md-4 mb-3 mx-auto">
                <div class="card">
                  <div class="card-header">
                    <%= "#{post[1]}" %>
                  </div>
                  <%= image_tag Post.where(place:post[1]).last.image, class: "image" %>
                  <div class="card-img-overlay d-flex align-items-end justify-content-end">
                    <div class="card-maru p-2">
                      <%= link_to "+ #{post[0] - 1}", posts_path(place:"#{post[1]}"), class: "text-white" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-8 p-5">
          <h4>お客様ノート</h4>
          <div class="messages">
            <%= render 'public/messages/index', messages: @messages %>
          </div>

          <div class="row mt-3">
            <div class="col-12">
              <%= form_with model: [@message], local: false do |f| %>
               <div class="row">
                <div class="col-9 offset-1">
                  <%= f.text_field :message, placeholder: "message", class: "form-control form-control-sm" %>
                </div>
                <div class="col-1">
                  <%= f.button :type => "submit", style: 'border-style: none; background: none;' do %>
                    <i class="far fa-paper-plane" aria-hidden="true"></i>
                  <% end %>
                </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-12">
              <%= render 'layouts/back_btn' %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>