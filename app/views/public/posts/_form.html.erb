<div class="row">
  <%= form_with model: post, url: url do |f| %>
    <div class="col-md-8">
      <%= f.label :genre_id, "genre" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %>
    </div>
    <div class="col-md-8">
      <%= f.label :title, "title" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-md-8">
      <%= f.label :body, "body" %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-md-8">
      <%= f.label :image, "image" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="col-md-8">
      <%= f.label :place, "place" %>
      <%= f.text_field :place, class: "form-control" %>
    </div>
    <div class="col-md-8">
      <%= f.label :show_name, "show_name" %>
      <%= f.text_field :show_name, class: "form-control" %>
    </div>
    <div class="col-md-8">
      <%= f.label :show_date, "show_date" %>
      <%= f.date_field :show_date, class: "form-control" %>
    </div>
    <div class="col-md-8">
      <%= f.submit "post", class: "btn btn-outline-info" %>
    </div>
  <% end %>
</div>