<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto my-3">

      <div class="row my-3">
        <div class="col-md-8">
          <h2>post index</h2>

          <div class="row mt-3">
            <div class="col-md-8">
              <%= search_form_for @search do |f| %>
                <%= f.search_field :title_or_place_or_show_name_cont, placeholder: "公演名、会場名など", class: "form-control" %>
                <%= f.submit "search", class: "btn btn-info btn-sm" %>
              <% end %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-md-8">
              <% @posts.each do |post| %>
                <% if post.image.attached? %>
                  <p><%= image_tag post.image, width: "30%" %></p>
                <% end %>
                <p><%= link_to post.title, post_path(post) %></p>
              <% end %>
              <p><%= link_to "post", new_post_path %></p>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>