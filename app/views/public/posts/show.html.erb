<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto my-5">

      <div class="row my-3">
        <div class="col-md-8">
          <h2>post show</h2>
          <% if @post.image.attached? %>
          <p><%= image_tag @post.get_image %></p>
          <% end %>
          <p><%= @post.title %></p>
          <p><%= @post.body %></p>
          <p><%= link_to "edit", edit_post_path, class: "btn btn-outline-success btn-sm" %></p>
          <p><%= link_to "destroy", post_path, class: "btn btn-outline-danger btn-sm" %></p>
        </div>
      </div>

    </div>
  </div>
</div>