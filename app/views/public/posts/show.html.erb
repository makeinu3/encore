<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto my-5">

      <div class="row my-3">
        <div class="col-md-8">
          <h2>post show</h2>
          <% if @post.image.attached? %>
            <p><%= image_tag @post.image, width: "80%" %></p>
          <% end %>
          <p><%= @post.title %></p>
          <p><%= @post.body %></p>
          <% if @post.customer == current_customer %>
            <p><%= link_to "edit", edit_post_path(@post), class: "btn btn-outline-success btn-sm" %></p>
            <p><%= link_to "destroy", post_path(@post), method: :delete, class: "btn btn-outline-danger btn-sm" %></p>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <% @post.comments.each do |comment| %>
            <p><%= comment.customer.name %></p>
            <p><%= comment.comment %></p>
            <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
            <% if comment.customer == current_customer %>
              <p><%= link_to "destroy", post_comments_path(comment.post,comment), method: :delete %></p>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <%= form_with model: [@post, @comment] do |f| %>
            <%= f.text_area :comment, placeholder: "here", class: "form-control" %>
            <%= f.submit "send", class: "btn btn-outline-info btn-sm" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>